<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- state colors work line switch case state, traversed top to bottom and matched state applied,
        if matched none then default color is applied -->
    <item android:color="?attr/colorPrimaryVariant"
        android:state_selected="true" />
    <!--default color -->
    <item android:alpha="0.18" android:color="?attr/colorOnSurface"/>
</selector>